{
  "name": "@lokd/contracts",
  "version": "1.0.0",
  "description": "Lokd smart contracts - trustless conditional escrow",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:arbitrum": "hardhat run scripts/deploy.ts --network arbitrum",
    "deploy:arbitrum-sepolia": "hardhat run scripts/deploy.ts --network arbitrumSepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:sepolia": "hardhat run scripts/deploy.ts --network sepolia",
    "deploy:base": "hardhat run scripts/deploy.ts --network base",
    "deploy:base-sepolia": "hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:optimism": "hardhat run scripts/deploy.ts --network optimism",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "dotenv": "^16.3.1",
    "hardhat": "^2.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}

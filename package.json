{
  "name": "lockd",
  "version": "1.0.0",
  "private": true,
  "description": "Lockd - Lock crypto for anyone. Get it back if unclaimed.",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "build": "npm run build --workspace=apps/web",
    "start": "npm run start --workspace=apps/web",
    "lint": "npm run lint --workspace=apps/web",
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:arbitrum": "npx hardhat run scripts/deploy.ts --network arbitrum",
    "deploy:arbitrum-sepolia": "npx hardhat run scripts/deploy.ts --network arbitrumSepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy.ts --network mainnet",
    "deploy:sepolia": "npx hardhat run scripts/deploy.ts --network sepolia",
    "deploy:base": "npx hardhat run scripts/deploy.ts --network base",
    "deploy:base-sepolia": "npx hardhat run scripts/deploy.ts --network baseSepolia",
    "deploy:optimism": "npx hardhat run scripts/deploy.ts --network optimism",
    "deploy:polygon": "npx hardhat run scripts/deploy.ts --network polygon"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ledger": "^1.2.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^16.6.1",
    "hardhat": "^2.28.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Biosai/lockd"
  },
  "keywords": [
    "ethereum",
    "escrow",
    "crypto",
    "payments",
    "defi",
    "web3",
    "arbitrum",
    "trustless",
    "lock"
  ],
  "author": "",
  "license": "MIT"
}
